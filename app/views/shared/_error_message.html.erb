<div class="animate-fade-in text-center p-4">
  <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-900/30 mb-4">
    <svg class="w-8 h-8 text-red-400 animate-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </div>
  <h3 class="text-lg font-medium text-white mb-2">Oops! Something went wrong</h3>
  <p class="text-sm text-red-400">
    <%= flash[:alert] %>
  </p>
</div>

<style>
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out;
  }

  .animate-error {
    animation: errorMark 0.8s cubic-bezier(0.65, 0, 0.45, 1) forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes errorMark {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
